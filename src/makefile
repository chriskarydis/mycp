CC = gcc
CFLAGS = -Wall -Wextra

# Αρχεία πηγαίου κώδικα

SRC = mycp.c file_operations.c error_handling.c report_generator.c

# Αντικείμενα που παράγονται από τα πηγαία αρχεία

OBJ = $(SRC:.c=.o)

# Το όνομα του τελικού προγράμματος

TARGET = mycp

.PHONY: all clean

# Όλα τα βήματα για τον χτίσιμο του προγράμματος

all: $(TARGET)

$(TARGET): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

# Κανόνας για τη μεταγλώττιση των πηγαίων αρχείων σε αντικείμενα

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Εντολή για τη διαγραφή των παραγόμενων αρχείων και του εκτελέσιμου

clean:
	rm -f $(OBJ) $(TARGET)


################################################################
#               Μήνυμα στο τέλος του Makefile                  #
